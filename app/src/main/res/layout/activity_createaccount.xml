<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".CreateAccountActivity">

    <EditText
        android:id="@+id/CreateAccountUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:hint="username" />
    <EditText
        android:id="@+id/CreateAccountProfileBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:hint="Profile Bio (Optional)"
        />

    <EditText
        android:id="@+id/CreateAccountPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="password"
        android:gravity="center"
        android:inputType="textPassword" />
    <EditText
        android:id="@+id/CreateAccountConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="confirm password"
        android:gravity="center"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/confirmCreateAccountButton"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/green"
        android:text="Confirm"
        android:textSize="20sp"
        android:textStyle="bold"/>

</LinearLayout>